				<h1 class="font-bold text-center bg-gray-200 p-2 mb-4">
					مشخصات فردی
				</h1>
				<div class="p-5">
					<div class="flex gap-3">
						{{ form_row(form.fullname) }}
						{{ form_row(form.fatherName) }}
						{{ form_row(form.birthDate) }}
						{{ form_row(form.birthCertificateNumber) }}
						{{ form_row(form.nationalCode) }}
					</div>
					<div class="flex gap-3">
						<div class="flex flex-col mb-6 last:mb-0 w-1/3">
							<label class="text-gray-500 mr-4 text-sm mb-1 required" for="contact_form_fullname">تاریخ تولد</label><input type="date" id="contact_form_fullname" name="contact_form[fullname]" required="required" placeholder="" class="bg-white sm:h-12 h-10 text-sm text-dark-550 focus:font-bold placeholder:text-gray-500 rounded-md border border-gray-200 px-4"/>
						</div>

						<div class="flex flex-col mb-6 last:mb-0 w-1/3">
							<label class="text-gray-500 mr-4 text-sm mb-1 required" for="contact_form_fullname">
								ملیت
							</label><input type="text" id="contact_form_fullname" name="contact_form[fullname]" required="required" placeholder=" " class="bg-white sm:h-12 h-10 text-sm text-dark-550 focus:font-bold placeholder:text-gray-500 rounded-md border border-gray-200 px-4"/>
						</div>

						<div class="flex flex-col mb-6 last:mb-0 w-[32.7%]">
							<label class="text-gray-500 mr-4 text-sm mb-1 required" for="contact_form_fullname">
